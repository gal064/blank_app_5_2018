<h1>
  All clubs
</h1>

<a href="/clubs/new">
  Add a new club
</a>

<hr>

<table class="table">
  <tr>
    <th>
      ID
    </th>

    <th>
      Name
    </th>

    <th>
      Logo
    </th>

    <th>
      Created at
    </th>

    <th>
      Updated at
    </th>

    <th>
    </th>
  </tr>

  <% @clubs.each do |club| %>
  <tr>
    <td>
      <%= club.id %>
    </td>

    <td>
      <%= club.name %>
    </td>

    <td>
      <%= club.logo %>
    </td>

    <td>
      <%= time_ago_in_words(club.created_at) %> ago
    </td>

    <td>
      <%= time_ago_in_words(club.updated_at) %> ago
    </td>

    <td>
      <a href="/clubs/<%= club.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
