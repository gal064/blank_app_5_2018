<!-- Validation failure messages -->
<% if @bookmark.present? %>
  <% if @bookmark.errors.any? %>
    <% @bookmark.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new bookmark
</h1>

<hr>

<form action="/create_bookmark" method="post">
  <!-- Label and input for user_id -->
  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @bookmark.try(:user_id) %>">
  </div>

  <!-- Label and input for icase_id -->
  <div class="form-group">
    <label for="icase_id">
      Icase
    </label>

    <input type="text" id="icase_id" name="icase_id" class="form-control" value="<%= @bookmark.try(:icase_id) %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create bookmark
  </button>
</form>

<hr>

<a href="/bookmarks">
  Go back
</a>
